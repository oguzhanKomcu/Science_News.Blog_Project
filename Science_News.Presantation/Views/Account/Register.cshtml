@model RegisterDTO
@{
    Layout = null;
}



<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/" />
</head>
<body>
    <div class="conteiner mt-5">
        <div class="row">
            <div class="col-sm-3"></div>
            <div class="col-sm-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Register</h4>
                    </div>
                    <form asp-action="Register">
                        <div class="card-body">
                            <div class="form-group">
                                <label asp-for="UserName"></label>
                                <input asp-for="UserName" class="form-control" placeholder="User Name" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control" placeholder="User Name" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword"></label>
                                <input asp-for="ConfirmPassword" class="form-control" placeholder="User Name" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>


                        </div>
                        <div class="card-footer">
                            <input type="submint" class="btn-success btn-sm float-end mr-2" value="Submit" />
                            <a asp-action="LogIn" class="btn-primary btn-sm float-end mr-2 ml-2">Log In</a>

                        </div>

                    </form>
                </div>

            </div>
            <div class="col-sm-3"></div>



        </div>

    </div>


</body>
</html>
